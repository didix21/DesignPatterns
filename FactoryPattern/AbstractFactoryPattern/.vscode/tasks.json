{
    "version": "2.0.0", 
    "tasks": [
        {
            "label": "Build cmake files",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "-B", "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build c++ files",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "linux": {
                "command": "make",
                "args": [
                    "-j", "8"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/FactoryPizza"
            },

            "command": "./FactoryPizza",

            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
