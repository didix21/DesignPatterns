{
    "version": "2.0.0", 
    "tasks": [
        {
            "label": "Build cmake files",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "-G", "Unix Makefiles"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build c++ files",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make",
            "args": [
                "-j 8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}